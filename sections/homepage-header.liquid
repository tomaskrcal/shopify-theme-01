<header class="relative h-full">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 z-20 relative">
    <div class="text-left">
      <p style="font-size: {{ section.settings.font_size }}rem"
         class="mt-1 sm:text-5xl color-base-text sm:tracking-tight lg:text-6xl">{{ section.settings.text }}</p>
      <div style="font-size: 2rem" class="text-left max-w-12 mb-10 mb-4">{{ section.settings.richtext }}</div>
      {%- if section.settings.link != blank -%}
        <a href="{{ section.settings.link }}"
           class="btn px-8 py-4 border border-transparent shadow-sm color-btn bg-color-accent-1">
          {{ section.settings.button_text | escape }}
        </a>
      {%- endif -%}
    </div>
  </div>
</header>

<div class="z-10 relative h-1 left-0 top-0 w-full opacity-60 mb-80">
  {% if section.settings.image_1 %}
    <img
      style="left: 50px; top: 150px;width: 350px;height: auto"
      class="absolute thumbnail"
      srcset="{%- if section.settings.image_1.width >= 375 -%}{{ section.settings.image_1 | img_url: '375x' }} 375w,{%- endif -%}
            {%- if section.settings.image_1.width >= 750 -%}{{ section.settings.image_1 | img_url: '750x' }} 750w,{%- endif -%}
            {%- if section.settings.image_1.width >= 1100 -%}{{ section.settings.image_1 | img_url: '1100x' }} 1100w,{%- endif -%}
            {%- if section.settings.image_1.width >= 1500 -%}{{ section.settings.image_1 | img_url: '1500x' }} 1500w,{%- endif -%}
            {%- if section.settings.image_1.width >= 1780 -%}{{ section.settings.image_1 | img_url: '1780x' }} 1780w,{%- endif -%}
            {%- if section.settings.image_1.width >= 2000 -%}{{ section.settings.image_1 | img_url: '2000x' }} 2000w,{%- endif -%}
            {%- if section.settings.image_1.width >= 2800 -%}{{ section.settings.image_1 | img_url: '2800x' }} 2800w{%- endif -%}"
      src="{{ section.settings.image_1 | img_url: '750x' }}"
      loading="lazy"
      alt="{{ section.settings.image_1.alt | escape }}"
      width="{{ section.settings.image_1.width }}"
      height="{{ section.settings.image_1.width | divided_by: section.settings.image_1.aspect_ratio }}"
    >
  {% endif %}

  {% if section.settings.image_2 %}
    <img
      style="left: 40%; top: 300px; width: 400px;height: auto"
      class="absolute thumbnail"
      srcset="{%- if section.settings.image_2.width >= 375 -%}{{ section.settings.image_2 | img_url: '375x' }} 375w,{%- endif -%}
            {%- if section.settings.image_2.width >= 750 -%}{{ section.settings.image_2 | img_url: '750x' }} 750w,{%- endif -%}
            {%- if section.settings.image_2.width >= 1100 -%}{{ section.settings.image_2 | img_url: '1100x' }} 1100w,{%- endif -%}
            {%- if section.settings.image_2.width >= 1500 -%}{{ section.settings.image_2 | img_url: '1500x' }} 1500w,{%- endif -%}
            {%- if section.settings.image_2.width >= 1780 -%}{{ section.settings.image_2 | img_url: '1780x' }} 1780w,{%- endif -%}
            {%- if section.settings.image_2.width >= 2000 -%}{{ section.settings.image_2 | img_url: '2000x' }} 2000w,{%- endif -%}
            {%- if section.settings.image_2.width >= 2800 -%}{{ section.settings.image_2 | img_url: '2800x' }} 2800w{%- endif -%}"
      src="{{ section.settings.image_2 | img_url: '750x' }}"
      loading="lazy"
      alt="{{ section.settings.image_2.alt | escape }}"
      width="{{ section.settings.image_2.width }}"
      height="{{ section.settings.image_2.width | divided_by: section.settings.image_2.aspect_ratio }}"
    >
  {% endif %}

  {% if section.settings.image_3 %}
    <img
      style="right: 300px; top: 100px; width: 200px;height: auto"
      class="absolute thumbnail"
      srcset="{%- if section.settings.image_3.width >= 375 -%}{{ section.settings.image_3 | img_url: '375x' }} 375w,{%- endif -%}
            {%- if section.settings.image_3.width >= 750 -%}{{ section.settings.image_3 | img_url: '750x' }} 750w,{%- endif -%}
            {%- if section.settings.image_3.width >= 1100 -%}{{ section.settings.image_3 | img_url: '1100x' }} 1100w,{%- endif -%}
            {%- if section.settings.image_3.width >= 1500 -%}{{ section.settings.image_3 | img_url: '1500x' }} 1500w,{%- endif -%}
            {%- if section.settings.image_3.width >= 1780 -%}{{ section.settings.image_3 | img_url: '1780x' }} 1780w,{%- endif -%}
            {%- if section.settings.image_3.width >= 2000 -%}{{ section.settings.image_3 | img_url: '2000x' }} 2000w,{%- endif -%}
            {%- if section.settings.image_3.width >= 2800 -%}{{ section.settings.image_3 | img_url: '2800x' }} 2800w{%- endif -%}"
      src="{{ section.settings.image_3 | img_url: '750x' }}"
      loading="lazy"
      alt="{{ section.settings.image_3.alt | escape }}"
      width="{{ section.settings.image_3.width }}"
      height="{{ section.settings.image_3.width | divided_by: section.settings.image_3.aspect_ratio }}"
    >
  {% endif %}

  {% if section.settings.image_4 %}
    <img
      style="right: 50px; top: 350px; width: 250px;height: auto"
      class="absolute thumbnail"
      srcset="{%- if section.settings.image_4.width >= 375 -%}{{ section.settings.image_4 | img_url: '375x' }} 375w,{%- endif -%}
            {%- if section.settings.image_4.width >= 750 -%}{{ section.settings.image_4 | img_url: '750x' }} 750w,{%- endif -%}
            {%- if section.settings.image_4.width >= 1100 -%}{{ section.settings.image_4 | img_url: '1100x' }} 1100w,{%- endif -%}
            {%- if section.settings.image_4.width >= 1500 -%}{{ section.settings.image_4 | img_url: '1500x' }} 1500w,{%- endif -%}
            {%- if section.settings.image_4.width >= 1780 -%}{{ section.settings.image_4 | img_url: '1780x' }} 1780w,{%- endif -%}
            {%- if section.settings.image_4.width >= 2000 -%}{{ section.settings.image_4 | img_url: '2000x' }} 2000w,{%- endif -%}
            {%- if section.settings.image_4.width >= 2800 -%}{{ section.settings.image_4 | img_url: '2800x' }} 2800w{%- endif -%}"
      src="{{ section.settings.image_4 | img_url: '750x' }}"
      loading="lazy"
      alt="{{ section.settings.image_4.alt | escape }}"
      width="{{ section.settings.image_4.width }}"
      height="{{ section.settings.image_4.width | divided_by: section.settings.image_4.aspect_ratio }}"
    >
  {% endif %}
</div>

{% schema %}
{
  "name": "t:sections.homepage-header.name",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "t:sections.homepage-header.settings.text.label"
    },
    {
      "type": "range",
      "id": "font_size",
      "min": 10,
      "max": 24,
      "step": 1,
      "default": 14,
      "unit": "t:sections.homepage-header.settings.font_size.unit",
      "label": "t:sections.homepage-header.settings.font_size.label"
    },
    {
      "type": "richtext",
      "id": "richtext",
      "label": "t:sections.homepage-header.settings.richtext.label",
      "default": "<p></p>"
    },
    {
      "type": "url",
      "id": "link",
      "label": "t:sections.homepage-header.settings.link.label"
    },
    {
      "type": "text",
      "id": "button_text",
      "default": "Explore",
      "label": "t:sections.homepage-header.settings.button_text.label"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "t:sections.homepage-header.settings.color_scheme.options__1.label"
        },
        {
          "value": "accent-2",
          "label": "t:sections.homepage-header.settings.color_scheme.options__2.label"
        },
        {
          "value": "background-1",
          "label": "t:sections.homepage-header.settings.color_scheme.options__3.label"
        },
        {
          "value": "background-2",
          "label": "t:sections.homepage-header.settings.color_scheme.options__4.label"
        }
      ],
      "default": "accent-1",
      "label": "t:sections.homepage-header.settings.color_scheme.label"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "t:sections.homepage-header.settings.image_1.label"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "t:sections.homepage-header.settings.image_2.label"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "t:sections.homepage-header.settings.image_3.label"
    },
    {
      "type": "image_picker",
      "id": "image_4",
      "label": "t:sections.homepage-header.settings.image_4.label"
    }
  ]
}
{% endschema %}
